<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.lawencon.bookleasing.entity.RentalHeader" table="tb_r_hdr_rental">
        <id name="id">
            <generator class="identity"/>
        </id>
        <property name="receipt" not-null="true"/>
        <many-to-one name="customer" class="com.lawencon.bookleasing.entity.Customer">
            <column name="customer_id" not-null="true"/>
        </many-to-one>
        <many-to-one name="user" class="com.lawencon.bookleasing.entity.User">
            <column name="user_id" not-null="true"/>
        </many-to-one>
    </class>

</hibernate-mapping>