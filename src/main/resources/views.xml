<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        https://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mainView" class="com.lawencon.bookleasing.view.MainView"
          autowire="constructor"/>

    <!-- Admin -->
    <bean id="adminView"
          class="com.lawencon.bookleasing.view.admin.AdminView"
          autowire="constructor"/>
    <bean id="addBookView"
          class="com.lawencon.bookleasing.view.admin.AddBookView"
          autowire="constructor"/>
    <bean id="deleteBookView"
          class="com.lawencon.bookleasing.view.admin.DeleteBookView"
          autowire="constructor"/>
    <bean id="addUserView"
          class="com.lawencon.bookleasing.view.admin.AddUserView"
          autowire="constructor"/>

    <!-- Cashier -->
    <bean id="cashierView"
          class="com.lawencon.bookleasing.view.cashier.CashierView"
          autowire="constructor"/>
    <bean id="rentalBookView"
          class="com.lawencon.bookleasing.view.cashier.RentalBookView"
          autowire="constructor"/>
    <bean id="returnBookView"
          class="com.lawencon.bookleasing.view.cashier.ReturnBookView"
          autowire="constructor"/>
    <bean id="transactionHistoryView"
          class="com.lawencon.bookleasing.view.cashier.TransactionHistoryView"
          autowire="constructor"/>

</beans>